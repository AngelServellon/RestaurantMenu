@model RestaurantMenu.Models.MealIngredient

@{
    ViewBag.Title = "AgregarIngredientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AgregarIngredientes</h2>

@{
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        //message tiene un valor
        <div class="alert alert-success">@ViewBag.Message</div>
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MealIngredient</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.id_Meal, "Meal", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Action("ListarComidas")
                @Html.ValidationMessageFor(model => model.id_Meal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_Ingredient, "Ingredient", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.Action("ListarIngredientes")
                @Html.ValidationMessageFor(model => model.id_Ingredient, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <button type="button">@Html.ActionLink("New Ingredient", "CrearIngrediente", "Ingredient")</button>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Finish", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}
