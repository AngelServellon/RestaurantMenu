@model IEnumerable<RestaurantMenu.Models.Meal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Meals</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th width="300">
            @Html.DisplayNameFor(model => model.Preparation)
        </th>
        <th>
            Area
        </th>
        <th>
            Category
        </th>
        <th>
            Ingredientes
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img width="200" src="@RestaurantMenu.Controllers.MealController.MealImage(item.Id_Meal)" alt="Alternate Text" />
        </td>
        <td width="300">
            @Html.DisplayFor(modelItem => item.Preparation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.Action("MealIngrediants", new { id = item.Id_Meal })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id_Meal }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id_Meal }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id_Meal })
        </td>
    </tr>
}

</table>
